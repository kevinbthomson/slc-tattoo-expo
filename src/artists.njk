---
title: 2024 Artists
layout: 'layouts/artists.njk'
pagination:
  data: collections.artists
  size: 24
  alias: artists
---


{% if pagination.pageNumber + 1 == 1 and collections.featured.length > 0 %}
  <h2 style="text-align: center">Featured 2024 Artists</h2>
  <ul class="featured-list">
  {%- for artist in collections.featured | sort -%} {% include 'partials/featured.njk' %} {%- endfor
  -%}
  </ul>
{% endif %}


{% if pagination.pageNumber + 1 == 1 %}
  <h2 style="text-align: center;">New Artists Updated Weekly</h2>
{% endif %}

{% if pagination.pageLinks.length > 1 %}
<div
  class="container"
  style="display: flex; align-items: center; justify-content: space-between"
>
  <h4>
    Page: {{ pagination.pageNumber + 1 }} of
    {{ pagination.pageLinks.length }}
  </h4>

  <nav class="pagination">
    {% if pagination.previousPageLink %}
    <a class="pagination__item" href="{{ pagination.previousPageHref }}"
      >Previous</a
    >
    {% else %}
    <span class="pagination__item">Previous</span>
    {% endif %} {% if pagination.nextPageLink %}
    <a class="pagination__item" href="{{ pagination.nextPageHref }}">Next</a>
    {% else %}
    <span class="pagination__item">Next</span>
    {% endif %}
  </nav>
</div>
{% endif %}

<ul class="artists-list">
  {%- for artist in artists | sort -%} {% include 'partials/artist.njk' %} {%- endfor
  -%}
</ul>

{% if pagination.pageLinks.length > 1 %}
<div
  class="container"
  style="display: flex; align-items: center; justify-content: space-between"
>
  <h4>
    Page: {{ pagination.pageNumber + 1 }} of
    {{ pagination.pageLinks.length }}
  </h4>

  <nav class="pagination">
    {% if pagination.previousPageLink %}
    <a class="pagination__item" href="{{ pagination.previousPageHref }}"
      >Previous</a
    >
    {% else %}
    <span class="pagination__item">Previous</span>
    {% endif %} {% if pagination.nextPageLink %}
    <a class="pagination__item" href="{{ pagination.nextPageHref }}">Next</a>
    {% else %}
    <span class="pagination__item">Next</span>
    {% endif %}
  </nav>
</div>
{% endif %}