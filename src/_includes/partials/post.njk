<li>
  <article class="post">
    <header>
      <h3 class="post__title">
        <a href="{{ post.url }}">{{ post.data.title }}</a>
      </h3>
      <p class="post__date">{{ post.date | postDate }}</p>
    </header>
    {% if post.data.description %}
    <p class="post__description">
      {{ post.data.description }}
    </p>
    {% endif %}
    <p>
      <a class="post__link" href="{{ post.url }}">View</a>
    </p>
  </article>
</li>
