<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Salt Lake City Tattoo Expo - {{ title }}</title>

    <script
      defer
      src="https://identity.netlify.com/v1/netlify-identity-widget.js"
    ></script>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,400;0,700;0,900;1,400;1,700&family=Roboto+Slab:wght@900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="{{ '/css/styles.min.css' | url }}" />
  </head>
  <body data-mobile-nav-open="false">
    <div class="site-layout">
      {% include "../partials/header.njk" %}
      <main tabindex="-1" id="main-content">
        {{ content | safe }}
      </main>
      {% include "../partials/footer.njk" %}
    </div>

    <script>
      if (window.netlifyIdentity) {
        window.netlifyIdentity.on('init', (user) => {
          if (!user) {
            window.netlifyIdentity.on('login', () => {
              document.location.href = '/admin/';
            });
          }
        });
      }
    </script>

    <script src="/js/bundle.js"></script>
  </body>
</html>
